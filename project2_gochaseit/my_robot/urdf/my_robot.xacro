<?xml version='1.0'?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="robot_footprint"/>

  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  
  <joint name="robot_footprint_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="robot_footprint"/>
    <child link="body"/>
  </joint>

  <link name="body">
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="2"/>
      <origin rpy="0 0 0" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <collision name="body_collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <visual name="body_visual">
      <origin rpy="0 0 1.5707" xyz="0.05 -0.05 -0.045"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename ="file://$(find my_robot)/meshes/miniPi_5.dae"/>
        <!-- <box size="0.1 0.1 0.1"/> -->
      </geometry>
    </visual>
    <collision name="back_support_collision">
      <origin rpy="0 0 0" xyz="-0.035 0 -0.05"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
    <visual name="back_support_visual">
      <origin rpy="0 0 0" xyz="-0.035 0 -0.05"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>
    <collision name="front_support_collision">
      <origin rpy="0 0 0" xyz="0.035 0 -0.05"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </collision>
    <visual name="front_support_visual">
      <origin rpy="0 0 0" xyz="0.035 0 -0.05"/>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
    </visual>
  </link>

  <link name="left_wheel">
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="5"/>
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <collision name="left_wheel_collision">
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <visual name="left_wheel_visual">
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </visual>
  </link>

  <link name="right_wheel">
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="5"/>
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <collision name="right_wheel_collision">
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <visual name="right_wheel_visual">
      <origin rpy="1.5707 0 0" xyz="0.0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </visual>
  </link>

  <joint name="left_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.062 -0.025"/>
    <child link="left_wheel"/>
    <parent link="body"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint name="right_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.062 -0.025"/>
    <child link="right_wheel"/>
    <parent link="body"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>


  <!-- SENSORS -->

  <!-- Camera -->

  <link name="camera">
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <collision name="camera_collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>
    <visual name="camera_visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.04 0 0.025"/>
    <child link="camera"/>
    <parent link="body"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <!-- <limit effort="10000" velocity="1000"/> -->
    <!-- <dynamics damping="1.0" friction="1.0"/> -->
  </joint>


  <!-- Lidar -->

  <link name="hokuyo">
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <collision name="hokuyo_collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <visual name="hokuyo_visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <!-- <mesh filename = "package://my_robot/meshes/hokuyo.dae"/> -->
        <mesh filename = "file://$(find my_robot)/meshes/hokuyo.dae"/>
        <!-- <box size="0.1 0.1 0.1"/> -->
      </geometry>
    </visual>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.05"/>
    <child link="hokuyo"/>
    <parent link="body"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <!-- <limit effort="10000" velocity="1000"/> -->
    <!-- <dynamics damping="1.0" friction="1.0"/> -->
  </joint>

</robot>